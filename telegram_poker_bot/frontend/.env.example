# Allowed hosts for Vite dev server and preview (comma separated)
VITE_ALLOWED_HOSTS=poker.shahin8n.sbs

# API base URL for frontend requests
# For production behind Nginx (routes /api/* to backend): use /api
# For local development (Vite dev server + backend on localhost:8000): use http://localhost:8000
# Examples:
#   Production/VPS with Nginx: VITE_API_URL=/api
#   Local development:         VITE_API_URL=http://localhost:8000
VITE_API_URL=/api

# Supported language codes (comma separated, lower-case)
VITE_SUPPORTED_LANGS=en,fa

# Default language code (must be part of VITE_SUPPORTED_LANGS)
VITE_DEFAULT_LANGUAGE=en
