# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_SECRET_TOKEN=your_webhook_secret
ADMIN_CHAT_ID=your_admin_chat_id

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
PUBLIC_BASE_URL=https://your-domain.com
WEBHOOK_PATH=/telegram/webhook
WEBHOOK_SECRET_TOKEN=your_webhook_secret

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/pokerbot
DATABASE_POOL_MIN_SIZE=10
DATABASE_POOL_MAX_SIZE=20

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASS=
REDIS_DB=0

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_JSON=false
TRACE_UPDATES=false
TRACE_SQL=false
TRACE_ENGINE=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_WALLET=false

# =============================================================================
# GAME CONFIGURATION
# =============================================================================
MATCHMAKING_POOL_TTL=120
PRIVATE_GAME_TTL=3600
DEFAULT_STARTING_STACK=10000
SMALL_BLIND=25
BIG_BLIND=50

# =============================================================================
# MINI APP CONFIGURATION
# =============================================================================
WEBAPP_SECRET=your_webapp_secret_here
CORS_ORIGINS=https://your-domain.com
VITE_API_URL=https://your-domain.com/api
VITE_BOT_USERNAME=@your_bot_username
