FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY telegram_poker_bot/frontend/package.json telegram_poker_bot/frontend/package-lock.json* ./
RUN npm ci

# Copy source code
COPY telegram_poker_bot/frontend/ .

# Build application
RUN npm run build

# Expose port
EXPOSE 3000

# Run frontend
CMD ["npm", "run", "preview", "--", "--host", "0.0.0.0", "--port", "3000"]
