# =============================================================================
# DOCKER COMPOSE ENVIRONMENT VARIABLES
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=pokerbot
POSTGRES_USER=pokerbot
POSTGRES_PASSWORD=changeme
POSTGRES_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PORT=0
# Host port to publish Redis on. Use 0 to let Docker assign a free port dynamically.
REDIS_DB=0

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_SECRET_TOKEN=your_webhook_secret
ADMIN_CHAT_ID=your_admin_chat_id

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
PUBLIC_BASE_URL=https://your-domain.com
WEBHOOK_PATH=/telegram/webhook
WEBHOOK_SECRET_TOKEN=your_webhook_secret

# =============================================================================
# DATABASE URL (Auto-generated from above, override if needed)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://pokerbot:changeme@postgres:5432/pokerbot

# =============================================================================
# REDIS URL (Auto-generated from above, override if needed)
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_JSON=false
TRACE_UPDATES=false
TRACE_SQL=false
TRACE_ENGINE=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_WALLET=false

# =============================================================================
# GAME CONFIGURATION
# =============================================================================
MATCHMAKING_POOL_TTL=120
PRIVATE_GAME_TTL=3600
DEFAULT_STARTING_STACK=10000
SMALL_BLIND=25
BIG_BLIND=50

# =============================================================================
# MINI APP CONFIGURATION
# =============================================================================
WEBAPP_SECRET=your_webapp_secret_here
CORS_ORIGINS=https://your-domain.com
VITE_API_URL=https://your-domain.com/api
VITE_BOT_USERNAME=@your_bot_username

# =============================================================================
# SERVICE PORTS
# =============================================================================
API_PORT=8000
FRONTEND_PORT=3000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# GIT CLONE CONFIGURATION (for docker-compose.clone.yml)
# =============================================================================
GIT_REPO_URL=https://github.com/your-org/your-repo.git
GIT_BRANCH=main
GIT_TOKEN=

# =============================================================================
# NGINX SSL CONFIGURATION (for production)
# =============================================================================
NGINX_SSL_CERT_PATH=./ssl
